<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Points" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:background="@color/postfooter_bg"
        android:paddingTop="40dp">


        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:text="Rakesh" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userName"
            android:layout_centerHorizontal="true"
            android:text="Noida" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_below="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />
    </RelativeLayout>


    <app.rockkworld.views.CircularImageView
        android:id="@+id/civ_userImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_username"

        app:civ_shadow="true"
        app:civ_shadowDx="0"
        app:civ_shadowDy="1"
        app:civ_shadowRadius="2" />
    <!--app:civ_border="true"-->
    <!--app:civ_borderColor="@color/theme"-->
    <!--app:civ_borderWidth="2dp"-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mid_layout" />


</RelativeLayout>
