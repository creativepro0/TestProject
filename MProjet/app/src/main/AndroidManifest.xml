<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.rockkworld" >
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".RockkWorldApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name=".activities.RSplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.WallActivity"
            android:label="@string/title_activity_wall" >
        </activity>
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/title_activity_wall" >
        </activity>
        <activity
            android:name=".activities.LoginSignUp"
            android:label="@string/title_activity_login_sign_up"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.RWActivity"
            android:label="@string/title_activity_rw"
            android:theme="@style/AppTheme" >

        </activity>
    </application>

</manifest>
